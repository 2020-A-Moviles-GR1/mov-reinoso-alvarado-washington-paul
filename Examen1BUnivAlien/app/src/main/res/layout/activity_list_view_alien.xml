<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListViewAlienActivity">


    <Button
        android:id="@+id/btn_refrescar"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_marginTop="52dp"
        android:text="refrescar"
        app:layout_constraintBottom_toTopOf="@+id/edt_text_alien"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.642" />

    <ListView
        android:id="@+id/lv_aliens"
        android:layout_width="378dp"
        android:layout_height="249dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.387" />

    <Button
        android:id="@+id/btn_crear_alien"
        android:layout_width="361dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="CREAR"
        app:layout_constraintEnd_toEndOf="@+id/lv_aliens"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="@+id/lv_aliens"
        app:layout_constraintTop_toBottomOf="@+id/lv_aliens" />

    <EditText
        android:id="@+id/edt_text_alien"
        android:layout_width="365dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:hint="Ingresar raza"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/lv_aliens"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_buscra_alien"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="BUSCAR"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_alien"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_alien"
        app:layout_constraintTop_toBottomOf="@+id/btn_crear_alien" />

    <Button
        android:id="@+id/btn_editar_alien"
        android:layout_width="357dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="EDITAR"
        app:layout_constraintEnd_toEndOf="@+id/btn_buscra_alien"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/btn_buscra_alien"
        app:layout_constraintTop_toBottomOf="@+id/btn_buscra_alien" />

    <Button
        android:id="@+id/btn_eliminar_alien"
        android:layout_width="355dp"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        android:text="ELIMINAR"
        app:layout_constraintEnd_toEndOf="@+id/btn_editar_alien"
        app:layout_constraintStart_toStartOf="@+id/btn_editar_alien"
        app:layout_constraintTop_toBottomOf="@+id/btn_editar_alien" />

</androidx.constraintlayout.widget.ConstraintLayout>