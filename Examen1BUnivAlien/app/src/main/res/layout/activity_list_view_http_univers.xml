<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListViewHttpUniversActivity">

    <EditText
        android:id="@+id/edt_universoHttp"
        android:layout_width="275dp"
        android:layout_height="58dp"
        android:ems="10"
        android:hint="Ingresar Universo"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <ListView
        android:id="@+id/lv_universoHttp"
        android:layout_width="389dp"
        android:layout_height="290dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_universoHttp">

    </ListView>

    <Button
        android:id="@+id/btn_creaUniHttp"
        android:layout_width="385dp"
        android:layout_height="57dp"
        android:text="crear"
        app:layout_constraintEnd_toEndOf="@+id/lv_universoHttp"
        app:layout_constraintStart_toStartOf="@+id/lv_universoHttp"
        app:layout_constraintTop_toBottomOf="@+id/lv_universoHttp" />

    <Button
        android:id="@+id/btn_eliminUniHttp"
        android:layout_width="383dp"
        android:layout_height="55dp"
        android:text="eliminar"
        app:layout_constraintEnd_toEndOf="@+id/btn_actualiUniHttp"
        app:layout_constraintStart_toStartOf="@+id/btn_actualiUniHttp"
        app:layout_constraintTop_toBottomOf="@+id/btn_actualiUniHttp" />

    <Button
        android:id="@+id/btn_actualiUniHttp"
        android:layout_width="385dp"
        android:layout_height="48dp"
        android:text="actualizar"
        app:layout_constraintEnd_toEndOf="@+id/btn_buscarUniHttp"
        app:layout_constraintStart_toStartOf="@+id/btn_buscarUniHttp"
        app:layout_constraintTop_toBottomOf="@+id/btn_buscarUniHttp" />

    <Button
        android:id="@+id/btn_buscarUniHttp"
        android:layout_width="387dp"
        android:layout_height="53dp"
        android:text="buscar"
        app:layout_constraintEnd_toEndOf="@+id/btn_creaUniHttp"
        app:layout_constraintStart_toStartOf="@+id/btn_creaUniHttp"
        app:layout_constraintTop_toBottomOf="@+id/btn_creaUniHttp" />

</androidx.constraintlayout.widget.ConstraintLayout>