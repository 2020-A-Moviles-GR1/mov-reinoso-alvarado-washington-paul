<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioCrearUniverso">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Crear Universo"
        android:textColor="#070707"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <EditText
        android:id="@+id/edt_nombre"
        android:layout_width="351dp"
        android:layout_height="52dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ingresar nombre universo"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_antiguedad"
        android:layout_width="351dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ingresar antiguedad universo"
        app:layout_constraintEnd_toEndOf="@+id/edt_nombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_nombre"
        app:layout_constraintTop_toBottomOf="@+id/edt_nombre" />

    <EditText
        android:id="@+id/edt_tamanio"
        android:layout_width="351dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ingresar tamaÃ±o universo"
        app:layout_constraintEnd_toEndOf="@+id/edt_antiguedad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_antiguedad"
        app:layout_constraintTop_toBottomOf="@+id/edt_antiguedad" />

    <EditText
        android:id="@+id/edt_temperatura"
        android:layout_width="349dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ingresar temperatura minima universo"
        app:layout_constraintEnd_toEndOf="@+id/edt_tamanio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_tamanio"
        app:layout_constraintTop_toBottomOf="@+id/edt_tamanio" />

    <EditText
        android:id="@+id/edt_primario"
        android:layout_width="349dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ingresar universo primario"
        app:layout_constraintEnd_toEndOf="@+id/edt_temperatura"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_temperatura"
        app:layout_constraintTop_toBottomOf="@+id/edt_temperatura" />

    <Button
        android:id="@+id/btn_crear_Unv"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#0E4095"
        android:text="CREAR"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancelar_Unv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edt_primario"
        app:layout_constraintTop_toBottomOf="@+id/edt_primario" />

    <Button
        android:id="@+id/btn_cancelar_Unv"
        android:layout_width="179dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#0E4095"
        android:text="CANCELAR"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/edt_primario"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_primario" />
</androidx.constraintlayout.widget.ConstraintLayout>