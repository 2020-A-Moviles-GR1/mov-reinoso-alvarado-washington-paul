<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/universos"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="302dp"
        android:layout_height="153dp"
        android:layout_marginTop="96dp"
        android:text="Gestion Universal y Alienigena"
        android:textColor="#FBFBFB"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_menu_universo"
        android:layout_width="200dp"
        android:layout_height="79dp"
        android:layout_marginTop="324dp"
        android:backgroundTint="#FDFCFC"
        android:text="UNIVERSO"
        android:textColor="#0B0B0B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_menu_aliens"
        android:layout_width="207dp"
        android:layout_height="79dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#FBFBFB"
        android:text="ALIENS"
        app:layout_constraintEnd_toEndOf="@+id/btn_menu_universo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_menu_universo"
        app:layout_constraintTop_toBottomOf="@+id/btn_menu_universo" />

    <Button
        android:id="@+id/btn_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/btn_menu_aliens"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/btn_menu_aliens"
        app:layout_constraintTop_toBottomOf="@+id/btn_menu_aliens" />

</androidx.constraintlayout.widget.ConstraintLayout>